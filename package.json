{
  "name": "transparent-clock",
  "version": "1.0.0",
  "description": "A transparent clock, timer, and stopwatch app",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "build": {
    "appId": "com.antigravity.transparentclock",
    "win": {
      "target": "nsis"
    },
    "files": [
      "**/*",
      "!dist/*",
      "!node_modules/*"
    ],
    "directories": {
      "output": "dist"
    }
  },
  "keywords": [
    "electron",
    "clock",
    "transparent"
  ],
  "author": "Antigravity",
  "license": "ISC",
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.4.0"
  }
}
